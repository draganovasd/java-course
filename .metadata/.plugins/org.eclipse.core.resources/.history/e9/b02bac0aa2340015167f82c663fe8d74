import java.util.Scanner;
public class FactorialRecursive {

	public static void main(String[] args) {

			System.out.print("Factorial of number: ");
			int num=inputNumber();
			int factNum=factorialCalculation(1, num);
			System.out.println("Factoriel + !" + num + " is " + factNum);
		}
		
		public static int factorialCalculation(int firstNum, int lastNum){
			if(firstNum<lastNum){
				return firstNum*factorialCalculation(firstNum+1, lastNum);
			}else{
				return lastNum;
			}
		}
		
		public static int inputNumber() {
			Scanner input = new Scanner(System.in, "UTF-8");
			int inputNum = input.nextInt();	
			input.close();
			return inputNum;
		}
}

