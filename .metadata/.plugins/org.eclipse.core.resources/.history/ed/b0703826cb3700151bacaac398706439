package Car;

public class Car {
	private int price;
	
	public Car(){
		this.price=0;
	}

	public Car(int price) {
		this();
		setPrice(price);
	}
	public void setPrice(int price){
		this.price=price;
	}
	public int getPrice(){
		return this.price;
	}
	public void printPrice(){
		System.out.println("The price of the car is: "+price);
	}

	public static void main(String[] args) {
		Car car=new Car(5000);
		car.printPrice();

	}

}
