import java.util.Scanner;
public class Fifth {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in, "UTF-8");
        System.out.println("Please enter 4 numbers");
        System.out.println();
        System.out.println("First number:");
        double numDouble = input.nextDouble();
        
        System.out.println("Second number:");
        double numDouble2 = input.nextDouble();
        
        System.out.println("Third number:");
        double numDouble3 = input.nextDouble();
        
        System.out.println("Fourth number:");
        double numDouble4 = input.nextDouble();
        double value=numDouble+numDouble2+numDouble3+numDouble4;
        System.out.println("The vaue of the four numbers is: "+ value);
        
        input.close();

	}

}
