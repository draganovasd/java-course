import java.util.Scanner;
public class BonusPoints {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in, "UTF-8");
		System.out.println("Please enter your points  [1;9] ! ");
		System.out.print("Points: ");
		int points=input.nextInt();
		
				if(1<=points&&points<=3){
					int	bonus=5;
					int result=bonus*points;
		System.out.println("Your result is: "+result);
		}
		else if(4<=points&&points<=6){
			int	bonus2=10;
			int result2=bonus2*points;
		System.out.println("Your result is: "+result2);
		}
		else if(7<=points&&points<=9){
			int	bonus3=50;
			int result3=bonus3*points;
		System.out.println("Your result is: "+result3);
		}
				
		
		input.close();
		
		

	}

}
