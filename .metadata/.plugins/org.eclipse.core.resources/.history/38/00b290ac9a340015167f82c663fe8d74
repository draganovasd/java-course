
public class OddEven {

	public static void main(String[] args) {
		int number;
		
		number=5;
		print(number);
		
		number=10;
		print(number);
		
		number=3;
		print(number);
		

	}
	public static void print(long number){
		if(number%2==0){
			System.out.println("The number is even!");
			return;
		}
		
		System.out.println("The number is odd!");
		return;
	}

}
